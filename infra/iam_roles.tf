# iam roles for lambdas
resource "aws_iam_role" "create_user_iam" {
  name               = "iam-for-lambda-${local.create_user_funct}"
  assume_role_policy = <<EOF
{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Action": "sts:AssumeRole",
      "Principal": {
        "Service": "lambda.amazonaws.com"
      },
      "Effect": "Allow",
      "Sid": ""
    }
  ]
}
EOF
}

